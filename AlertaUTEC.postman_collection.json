{
	"info": {
		"name": "AlertaUTEC API",
		"description": "Colección actualizada para testing del backend AlertaUTEC - Sistema de gestión de incidentes universitarios",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "https://tu-api-gateway.execute-api.us-east-1.amazonaws.com/dev",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Auth - Usuarios",
			"item": [
				{
					"name": "Registrar Usuario Estudiante",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const responseJson = pm.response.json();",
									"    if (responseJson.success && responseJson.data && responseJson.data.token) {",
									"        pm.environment.set('jwt_token', responseJson.data.token);",
									"        console.log('Token guardado:', responseJson.data.token);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"estudiante@utec.edu.pe\",\n    \"password\": \"password123\",\n    \"nombre\": \"Juan Pérez\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": {
							"raw": "{{base_url}}/usuarios/registro",
							"host": [ "{{base_url}}" ],
							"path": [ "usuarios", "registro" ]
						}
					}
				},
				{
					"name": "Registrar Usuario Administrador",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const responseJson = pm.response.json();",
									"    if (responseJson.success && responseJson.data && responseJson.data.token) {",
									"        pm.environment.set('jwt_token', responseJson.data.token);",
									"        pm.environment.set('admin_token', responseJson.data.token);",
									"        console.log('Token de admin guardado:', responseJson.data.token);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@utec.edu.pe\",\n    \"password\": \"admin123\",\n    \"nombre\": \"Admin UTEC\",\n    \"role\": \"autoridad\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": {
							"raw": "{{base_url}}/usuarios/registro",
							"host": [ "{{base_url}}" ],
							"path": [ "usuarios", "registro" ]
						}
					}
				},
				{
					"name": "Iniciar Sesión",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const responseJson = pm.response.json();",
									"    if (responseJson.success && responseJson.data && responseJson.data.token) {",
									"        pm.environment.set('jwt_token', responseJson.data.token);",
									"        console.log('Login exitoso, token guardado:', responseJson.data.token);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"estudiante@utec.edu.pe\",\n    \"password\": \"password123\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": {
							"raw": "{{base_url}}/usuarios/login",
							"host": [ "{{base_url}}" ],
							"path": [ "usuarios", "login" ]
						}
					}
				},
				{
					"name": "Buscar Usuario por ID (Admin)",
					"request": {
						"method": "GET",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }
						],
						"url": {
							"raw": "{{base_url}}/usuarios/buscar?userId=test-user-id",
							"host": [ "{{base_url}}" ],
							"path": [ "usuarios", "buscar" ],
							"query": [
								{ "key": "userId", "value": "test-user-id" }
							]
						}
					}
				}
			]
		},
		{
			"name": "Incidentes",
			"item": [
				{
					"name": "Crear Incidente",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const responseJson = pm.response.json();",
									"    if (responseJson.success && responseJson.data && responseJson.data.codigo_incidente) {",
									"        pm.environment.set('codigo_incidente', responseJson.data.codigo_incidente);",
									"        console.log('Incidente creado:', responseJson.data.codigo_incidente);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{ "key": "Content-Type", "value": "application/json" },
							{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"ubicacion\": \"Aula 101 - Edificio A\",\n    \"descripcion\": \"Hay una fuga de agua en el techo del aula que está afectando las clases\",\n    \"tipo\": \"Fuga de agua\",\n    \"lugar\": \"aula\",\n    \"urgencia\": \"alta\",\n    \"imagen\": \"https://ejemplo.com/imagen.jpg\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": {
							"raw": "{{base_url}}/incidentes/crear",
							"host": [ "{{base_url}}" ],
							"path": [ "incidentes", "crear" ]
						}
					}
				},
				{
					"name": "Obtener Incidente por ID",
					"request": {
						"method": "GET",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }
						],
						"url": {
							"raw": "{{base_url}}/incidentes/buscar?codigo_incidente={{codigo_incidente}}",
							"host": [ "{{base_url}}" ],
							"path": [ "incidentes", "buscar" ],
							"query": [
								{ "key": "codigo_incidente", "value": "{{codigo_incidente}}" }
							]
						}
					}
				},
				{
					"name": "Actualizar Estado de Incidente (Admin)",
					"request": {
						"method": "PUT",
						"header": [
							{ "key": "Content-Type", "value": "application/json" },
							{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"codigo_incidente\": \"{{codigo_incidente}}\",\n    \"estado\": \"en_proceso\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": {
							"raw": "{{base_url}}/incidentes/estado",
							"host": [ "{{base_url}}" ],
							"path": [ "incidentes", "estado" ]
						}
					}
				}
			]
		},
		{
			"name": "Historial",
			"item": [
				{
					"name": "Listar Historial Completo",
					"request": {
						"method": "GET",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }
						],
						"url": {
							"raw": "{{base_url}}/historial/listar?page=1&size=10",
							"host": [ "{{base_url}}" ],
							"path": [ "historial", "listar" ],
							"query": [
								{ "key": "page", "value": "1" },
								{ "key": "size", "value": "10" }
							]
						}
					}
				},
				{
					"name": "Listar Historial por Incidente",
					"request": {
						"method": "GET",
						"header": [
							{ "key": "Authorization", "value": "Bearer {{jwt_token}}" }
						],
						"url": {
							"raw": "{{base_url}}/historial/incidente?codigo_incidente={{codigo_incidente}}",
							"host": [ "{{base_url}}" ],
							"path": [ "historial", "incidente" ],
							"query": [
								{ "key": "codigo_incidente", "value": "{{codigo_incidente}}" }
							]
						}
					}
				}
			]
		}
	]
}